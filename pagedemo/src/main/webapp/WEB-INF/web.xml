<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">
 	<!-- **********************************************工程参数配置**************************************************** -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/spring/spring-config.xml</param-value>
	</context-param>
	<context-param>
        <param-name>log4jConfigLocation</param-name>    
       <param-value>classpath:log4j.properties</param-value>    
    </context-param>
    <context-param>
	  <param-name>log4jRefreshInterval</param-name>
	  <param-value>60000</param-value>
	</context-param>
	<!-- **********************************************过滤器配置区**************************************************** -->
	<filter>
		<description>字符编码过滤器</description>
		<filter-name>characterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>characterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<description>AJAX跨域访问</description>
		<filter-name>CorsFilter</filter-name>
		<filter-class>com.frame.filter.SimpleCorsFilter</filter-class>
		<init-param>
			<param-name>access_control_allow_credentials</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<!-- 开启OPTIONS请求需contextConfigLocation中，需添加dispatchTraceRequest和dispatchOptionsRequest为true -->
			<param-name>access_control_allow_methods</param-name>
			<param-value>POST,HEAD,PUT,GET,OPTIONS,DELETE</param-value>
		</init-param>
		<init-param>
			<!-- 前端新增至请求头中的字段需在此处配置 -->
			<param-name>access_control_allow_headers</param-name>
			<param-value>Last-Modified,X-Requested-With,Origin,Content-Type,Accept,Authorization</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CorsFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- **********************************************应用服务配置**************************************************** -->
	<servlet>
		<servlet-name>spring</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/springmvc/springmvc-config.xml</param-value>
		</init-param>
		<!-- 如果需要支持OPTIONS、TRACE，需添加dispatchTraceRequest和dispatchOptionsRequest为true -->
		<init-param>
			<param-name>dispatchTraceRequest</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>dispatchOptionsRequest</param-name>
			<param-value>true</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>spring</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<!-- url-pattern中配置的/coreServlet用于指定该Servlet的访问路径 -->
	<servlet>
        <servlet-name>testWxServlet</servlet-name>
        <servlet-class>
            com.demo.controller.TestWxServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>testWxServlet</servlet-name>
        <url-pattern>/testWxServlet</url-pattern>
    </servlet-mapping>
    	<servlet>
        <servlet-name>testOAuthServlet</servlet-name>
        <servlet-class>
            com.demo.controller.TestOAuthServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>testOAuthServlet</servlet-name>
        <url-pattern>/testOAuthServlet</url-pattern>
    </servlet-mapping>
    <!-- **********************************************监听器配置区**************************************************** -->
	<listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>  
    </listener>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
</web-app>
